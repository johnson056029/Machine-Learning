    "import numpy as np\n",
    "def make_design_mat(data_x, num_data, num_bases):\n",
    "    A = np.empty((23,0))\n",
    "    for i in range(num_bases-1,-1,-1):\n",
    "        A = np.hstack((A, data_x**i))\n",
    "    return A"
